<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:foreground="?attr/selectableItemBackground"
    android:background="@android:color/white"
    android:orientation="vertical"
    >
  <ImageView
      android:id="@+id/iv_list_item_dot"
      android:layout_width="8dp"
      android:layout_height="8dp"
      android:layout_alignParentLeft="true"
      android:layout_centerVertical="true"
      android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp"
      android:contentDescription="@null"
      android:src="@drawable/ic_ingredient_dot"
      app:layout_constraintBottom_toTopOf="@+id/view2"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />


  <TextView
      android:id="@+id/tv_list_item_step"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginStart="8dp"
      android:maxLines="1"
      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
      android:textColor="#dd000000"
      app:layout_constraintBottom_toTopOf="@+id/tv_list_item_step_description"
      app:layout_constraintEnd_toStartOf="@+id/tv_list_item_step_chevron"
      app:layout_constraintStart_toEndOf="@+id/iv_list_item_dot"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_chainStyle="packed"
      tools:text="Salt"
      />

  <TextView
      android:id="@+id/tv_list_item_step_description"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginStart="8dp"
      android:maxLines="2"
      android:textAppearance="@style/TextAppearance.AppCompat.Small"
      app:layout_constraintBottom_toTopOf="@+id/view2"
      app:layout_constraintEnd_toStartOf="@+id/tv_list_item_step_chevron"
      app:layout_constraintStart_toEndOf="@+id/iv_list_item_dot"
      app:layout_constraintTop_toBottomOf="@+id/tv_list_item_step"
      tools:text="Salt"
      />


  <ImageView
      android:id="@+id/tv_list_item_step_chevron"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_centerVertical="true"
      android:layout_marginEnd="8dp"
      android:src="@drawable/ic_chevron_right_black"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:contentDescription="@null"
      />
  <View
      android:id="@+id/view2"
      android:layout_width="match_parent"
      android:layout_height="4dp"
      android:layout_alignParentBottom="true"
      android:background="@color/colorDivider"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      />
</androidx.constraintlayout.widget.ConstraintLayout>